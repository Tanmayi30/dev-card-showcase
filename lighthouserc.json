{
    "ci": {
        "collect": {
            "startServerCommand": "npx http-server . -p 3000",
            "startServerReadyPattern": "Available on",
            "startServerReadyTimeout": 30000,
            "url": [
                "http://localhost:3000/index.html",
                "http://localhost:3000/projects.html"
            ],
            "numberOfRuns": 1,
            "settings": {
                "chromeFlags": "--no-sandbox --disable-dev-shm-usage --allow-insecure-localhost --disable-web-security"
            }
        },
        "assert": {
            "preset": "lighthouse:no-pwa",
            "assertions": {
                "categories:performance": [
                    "warn",
                    {
                        "minScore": 0.5
                    }
                ],
                "categories:accessibility": [
                    "warn",
                    {
                        "minScore": 0.7
                    }
                ],
                "first-contentful-paint": [
                    "warn",
                    {
                        "maxNumericValue": 4000
                    }
                ],
                "interactive": [
                    "warn",
                    {
                        "maxNumericValue": 6000
                    }
                ],
                "unused-javascript": "off",
                "uses-http2": "off",
                "uses-long-cache-ttl": "off",
                "canonical": "off"
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}