{
  "manifest_version": 3,
  "name": "Mindful Notification Filter",
  "version": "1.0.0",
  "description": "Filters notifications based on user stress and focus levels, only allowing important alerts during deep work sessions.",
  "permissions": ["storage", "notifications", "background"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
